@page
@model tp6_torres_zucchini.Pages.User.IndexModel
@{
    ViewData["Title"] = "Cliente";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="text-center">
    <h1 class="display-3">Panel de Cliente</h1>
    <div class="mt-2">
        <p>Conectate para poder realizar más acciones, desconectate cuando no quieras realizar más acciones</p>

        @if (!Model.ShowForm)
        {
            <form method="post" asp-page-handler="MostrarFormulario">
                <button type="submit" class="btn btn-success">Conectarme</button>
            </form>
        }
        else
        {
            <form method="post" asp-page-handler="Ingresar">
                <div class="form-group mt-3">
                    <input asp-for="IdCliente" class="form-control" placeholder="IdCliente" required />
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="text-danger mt-2">@Model.ErrorMessage</div>
                }

                <div class="mt-3">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>