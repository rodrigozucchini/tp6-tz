@page
@model tp6_torres_zucchini.Pages.Admin.ClientesModel
@{
    ViewData["Title"] = "Panel de Administrador";
}
<div class="text-center">
    <h1 class="display-3"><a href="/Admin/Index" class="text-dark text-decoration-none"> Panel de Administracion</a></h1>
    <p class ="fs-5">
        En esta sección podras dar de alta, modificar o dar de baja a clientes. </p>

    <div class="container mt-5">
        <!-- Párrafo superior -->
        <p class="mb-3">Ingrese un ID de cliente para recuperar información asociada:</p>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <!-- Bloque visual -->
                <div class="card shadow-sm p-4">
                    <!-- Párrafo superior -->
                    <p class="mb-3">Ingrese los campos para dar de alta</p>
                    <div class="row g-2 align-items-center">
                        <!-- Input -->
                        <div class="col-7">
                            <input type="text" class="form-control" placeholder="ID Cliente" />
                        </div>

                        <!-- Resultado -->
                        <div class="col-5">
                            <div class="bg-light border rounded p-2">
                                <p class="mb-0">Aquí aparecerá el resultado</p>
                            </div>
                        </div>
                    </div>

                    <!-- Botón opcional -->
                    <div class="mt-3 text-end">
                        <button class="btn btn-primary">Buscar</button>
                    </div>
                </div>

            </div>
            <div class="col-lg-6 col-md-8">
                <!-- Bloque visual -->
                <div class="card shadow-sm p-4">
                    <!-- Párrafo superior -->
                    <p class="mb-3">Ingrese un ID de cliente para recuperar información asociada:</p>

                    <div class="row g-2 align-items-center">
                        <!-- Input -->
                        <div class="col-7">
                            <input type="text" class="form-control" placeholder="ID Cliente" />
                        </div>

                        <!-- Resultado -->
                        <div class="col-5">
                            <div class="bg-light border rounded p-2">
                                <p class="mb-0">Aquí aparecerá el resultado</p>
                            </div>
                        </div>
                    </div>

                    <!-- Botón opcional -->
                    <div class="mt-3 text-end">
                        <button class="btn btn-primary">Buscar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
