@page
@model tp6_torres_zucchini.Pages.Admin.ClientesModel
@{
    ViewData["Title"] = "Panel de Administrador";
}
<div class="text-center">
    <h1 class="display-3"><a href="/Admin/Index" class="text-dark text-decoration-none"> Panel de Administracion</a></h1>
    <p class="fs-5">
        En esta sección podras dar de alta, modificar o dar de baja a clientes.
    </p>
</div>

<form method="post">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm p-4">
                    <!-- Primera fila: Botones de acción -->
                    <div class="mb-3 d-flex justify-content-center gap-3">
                        <button type="submit" asp-page-handler="Alta" class="btn btn-primary">Alta Clt</button>
                        <button type="submit" asp-page-handler="Buscar" class="btn btn-primary">Buscar</button>
                        <button type="submit" asp-page-handler="Modificar"
                                class="btn btn-primary @(Model.MostrarBotonModificar ? "" : "d-none")">
                            Modificar
                        </button>
                    </div>

                    <!-- Campo ID -->
                    <div class="mb-3">
                        <label asp-for="ClienteActual.Id" class="form-label">ID Cliente</label>
                        <input asp-for="ClienteActual.Id" class="form-control" placeholder="ID Cliente"
                               readonly="@(Model.InputID ? null : "readonly")" />
                    </div>

                    <!-- Campo Nombre -->
                    <div class="mb-3">
                        <label asp-for="ClienteActual.Nombre" class="form-label">Nombre</label>
                        <input asp-for="ClienteActual.Nombre" class="form-control" placeholder="Cliente"
                               readonly="@(Model.InputsEditables ? null : "readonly")" />
                        <span asp-validation-for="ClienteActual.Nombre" class="text-danger"></span>
                    </div>

                    <!-- Campo Email -->
                    <div class="mb-3">
                        <label asp-for="ClienteActual.Email" class="form-label">Email</label>
                        <input asp-for="ClienteActual.Email" class="form-control" placeholder="Email Cliente"
                               readonly="@(Model.InputsEditables ? null : "readonly")" />
                        <span asp-validation-for="ClienteActual.Email" class="text-danger"></span>
                    </div>

                    <!-- Segunda fila: Botones de guardar -->
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" asp-page-handler="Guardar"
                                class="btn btn-success @(Model.MostrarBotonGuardar ? "" : "d-none")">
                            Guardar
                        </button>
                        <button type="submit" asp-page-handler="Cancelar"
                                class="btn btn-warning @(Model.MostrarBotonCancelar ? "" : "d-none")">
                            Cancelar
                        </button>
                        <button type="submit" asp-page-handler="Limpiar"
                                class="btn btn-secondary @(Model.MostrarBotonLimpiar ? "" : "d-none")">
                            Limpiar
                        </button>
                        <button type="submit" asp-page-handler="Eliminar"
                                class="btn btn-danger @(Model.MostrarBotonEliminar ? "" : "d-none")">
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

