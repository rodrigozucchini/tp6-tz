@page
@model tp6_torres_zucchini.Pages.Admin.IndexModel
@{
	ViewData["Title"] = "Panel de Administrador";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="text-center">
    <h1 class="display-3">Panel de Administracion</h1>
    <p class="fs-5">En esta sección podras monitorear el estado de los clientes en linea. </p>
    <p>Haga click aqui para aceder a la seccion de <a href="/Admin/Clientes"> Altas/Bajas/Modificacion de Clientes</a>.</p>
</div>
<div class="container mt-4">
    <h2 class="mb-3">Clientes en Linea</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>IDConnextion</th>
                <th>Fecha y Hora</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @* @foreach (var cliente in Model.Clientes)*@
            @for(int i=1; i<=5;i++){
                <tr>
                    <td>ID-Ejemplo @i</td>
                    <td> @DateTime.Now</td>
                    <td>
                        @if (true)
                        {
                            @:En línea <i class="bi bi-circle-fill text-success" style="font-size: 0.75rem;"></i>
                        }
                       @* else
                        {
                            @:Desconectado <i class="bi bi-circle-fill text-danger" style="font-size: 0.75rem;"></i>
                        }*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
